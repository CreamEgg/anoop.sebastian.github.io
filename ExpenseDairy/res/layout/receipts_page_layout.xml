<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    
    <LinearLayout 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    
    <TextView android:id="@+id/receipttitle" android:layout_width="match_parent" android:layout_height="wrap_content"
       		  android:textStyle="bold" android:text="Receipts for the date: " android:textSize="12sp" />  
       		  
    <ImageView	android:id = "@+id/receiptpicture" android:layout_width="wrap_content" android:layout_height="0dp"
           		android:adjustViewBounds="true" android:layout_weight="1" android:padding="10dp"
           		android:src="@drawable/defreceipt"/> 
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" 
        		  android:orientation="horizontal" android:padding="5dp" android:layout_weight="3" >        		  
        <Button 
    	    android:id="@+id/previous" android:layout_height="match_parent" android:layout_width="wrap_content"
    	    android:text="Previous" android:onClick="buttonclicked" android:layout_weight="1"/>
    	<Button 
    	    android:id="@+id/next" android:layout_height="match_parent" android:layout_width="wrap_content"
    	    android:text="Next" android:onClick="buttonclicked" android:layout_weight="1"/>   
    	<Button 
    	    android:id="@+id/close" android:layout_height="match_parent" android:layout_width="wrap_content"
    	    android:text="Close" android:onClick="buttonclicked" android:layout_weight="1"/> 	        
    </LinearLayout>
    </LinearLayout>
    
</ScrollView>
